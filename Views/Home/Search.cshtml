@model muddleapp.Models.Nugget;
@using muddleapp.Models;


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>muddle</title>
    <meta name="description" content="Cocktail search webapp!">
    <link rel="stylesheet" href="~/lib/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="~/lib/assets/css/Bootstrap-Cards-v2.css">
    <link rel="stylesheet" href="~/lib/assets/css/Footer-Dark.css">
    <link rel="stylesheet" href="~/lib/assets/css/Navigation-with-Button.css">
    <link rel="stylesheet" href="~/lib/assets/css/Navigation-with-Search.css">
    <link rel="stylesheet" href="~/lib/assets/css/Pretty-Search-Form.css">
    <link rel="stylesheet" href="~/lib/assets/css/styles.css">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md navigation-clean-button" style="background-color: #192965;color: rgb(255,254,254);">
        <div class="container">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <button data-toggle="collapse" type="submit" class="btn btn-link navbar-brand">muddle</button>
            }
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item" role="presentation"><a class="nav-link active" href="#" style="color: rgb(225,215,215);">Home</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#" style="color: rgb(225,215,215);">Search</a></li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false" href="#" style="color: rgb(225,215,215);">Categories</a>
                        <div class="dropdown-menu" role="menu"><a class="dropdown-item" role="presentation" href="#">First Item</a><a class="dropdown-item" role="presentation" href="#">Second Item</a><a class="dropdown-item" role="presentation" href="#">Third Item</a></div>
                    </li>
                </ul><span class="navbar-text actions"> <a class="login" href="#" style="color: rgb(225,215,215);">Log In</a><a class="btn btn-light action-button" role="button" href="#" style="background-color: #bbcfff;color: #192965;">Sign Up</a></span>
            </div>
        </div>
    </nav>
    <div>
        <div class="container">
            <div class="row">
                <div class="col" style="margin-bottom: 80px;margin-top: 45px;">
                    <form class="search-form">

                        @using (Html.BeginForm("searchPath", "Home", FormMethod.Post))
                        {
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-search"></i></span></div><input class="form-control" type="text" name="userdrink" id="userdrink" placeholder="I am looking for..">
                                <div class="input-group-append"><button class="btn btn-light" type="submit" style="background-color: #192965;color: rgb(255,255,255);">Search </button></div>
                            </div>
                        }
                    </form>
                </div><div class="bootstrap_cards2">
                          <div class="container py-5">

                              @for (int i = 0; i < (Model.drinks.Length / 4); i++)
                              {
                                  <div class="row pb-5 mb-4">


                                      @foreach (Drink drink in Model.drinks.Skip(i*4).Take(4))
                                      {
                                          <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                                              <!-- Card-->
                                              <div class="card rounded shadow-sm border-0">
                                                  <div class="card-body p-4">
                                                      <img src="@drink.strDrinkThumb" alt="" class="img-fluid d-block mx-auto mb-3">
                                                      <h5>@drink.strDrink</h5>
                                                      <p class="small text-muted font-italic">@drink.strCategory</p>
                                                      @using (Html.BeginForm("Recipe", "Home", FormMethod.Post))
                                                      {
                                                          <input type="hidden" value="@drink.idDrink" name="drinkID" id="drinkID" />
                                                          <button type="submit" class="btn btn-default">Recipe</button>
                                                      }
                                                  <ul class="list-inline small">
                                                      <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                                      <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                                      <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                                      <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                                      <li class="list-inline-item m-0"><i class="fa fa-star-o text-success"></i></li>
                                                  </ul>
                                                  </div>
                                              </div>
                                          </div>
                                      }


                                  </div>
                              }

                              <!-- Second Row [Team]-->
                          </div>
                </div>
            </div>
        </div>
        <div class="footer-dark" style="margin-top: 71px;background-color: #192965;">
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-md-3 item">
                            <h3>Services</h3>
                            <ul>
                                <li><a href="#">Web design</a></li>
                                <li><a href="#">Development</a></li>
                                <li><a href="#">Hosting</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-6 col-md-3 item">
                            <h3>About</h3>
                            <ul>
                                <li><a href="#">Company</a></li>
                                <li><a href="#">Team</a></li>
                                <li><a href="#">Careers</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6 item text">
                            <h3>Company Name</h3>
                            <p>Praesent sed lobortis mi. Suspendisse vel placerat ligula. Vivamus ac sem lacus. Ut vehicula rhoncus elementum. Etiam quis tristique lectus. Aliquam in arcu eget velit pulvinar dictum vel in justo.</p>
                        </div>
                        <div class="col item social"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-instagram"></i></a></div>
                    </div>
                    <p class="copyright">Company Name © 2017</p>
                </div>
            </footer>
        </div>
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>